<%= header do |p| %>
  <%= p.breadcrumbs "Kanban" => kanban_path,
                    @project => Project.all %>
<% end %>

<%= render partial: "kanban/kanban", locals: {projects: [@project]} %>

<% content_for :scripts do %>
  <script type="text/javascript">
    $(function() {
      var kanban = new Kanban({
        projects: [{slug: '<%= @project.slug %>', color: '<%= @project.color %>'}],
        queues: <%= raw KanbanQueue.slugs %>
      });
      kanban.loadQueues();
      $('#autoUpdate').click(function(){
        $('#timerWrapper').fadeIn();
        new Refresher({
          time: 10000,
          callback: function(){ kanban.loadQueues(); $('#lastUpdate span').empty().append(dateFormat('shortTime'))}
        });
        $('#lastUpdate span').append(dateFormat('shortTime'))
        $(this).remove();
      });
    });
  </script>
<% end %>
