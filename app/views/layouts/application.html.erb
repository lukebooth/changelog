<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= Rails.configuration.title %></title>
    <%= csrf_meta_tags %>
    <base href="<%= root_url %>" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Le fav and touch icons -->
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
    
    <!-- Templates -->
    <script id="ticket_template" type="text/x-handlebars-template">
      <li class="ticket {{projectSlug}} {{projectColor}} {{classForAge age}} {{verdict}}">
        <a href="https://<%= unfuddle.subdomain %>.unfuddle.com/a#/projects/{{projectId}}/tickets/by_number/{{number}}">
          <h3 class="ticket-number">{{number}} <span class="ticket-age">{{formatDuration age}}</span></h3>
          <p class="ticket-summary">{{summary}}</p>
        </a>
      </li>
    </script>
    
    <script id="ticket_in_testing_template" type="text/x-handlebars-template">
      <a data-toggle="collapse" data-parent="#tickets" data-target="#ticket_{{id}}_testing_notes" class="testing-notes">[#{{number}}] {{{formatTicketSummary summary}}}</a>
      <span class="ticket-verdict-summary"></span>
      <span class="tester-verdicts"></span>
      <ol id="ticket_{{id}}_testing_notes" class="testing-notes collapse">
        <li class='ticket-description'>{{{description}}}</li>
      </ol>
    </script>
    
    <script id="ticket_tester_verdict_template" type="text/x-handlebars-template">
      <span class="ticket-verdict" data-verdict="{{verdict}}">{{{testerAvatar email 16}}}</span>
    </script>
    
    <script id="testing_note_template" type="text/x-handlebars-template">
      <span class="tester-avatar">{{{avatarImage}}}</span>
      <span class="tester-comment">{{comment}}</span>
      {{#if editable}}
      <span class="tester-controls">
        <a class="edit-note">Edit</a>
        <a class="destroy-note">Delete</a>
      </span>
      {{/if}}
    </script>
    
    <script id="edit_testing_note_template" type="text/x-handlebars-template">
      <form accept-charset="UTF-8" action="/tickets/{{ticketId}}/testing_notes/{{id}}" class="testing-note-form" id="edit_testing_note_{{id}}" method="post">
        <p>
          <input data-attr="ticket_id" id="testing_note_{{id}}_ticket_id" name="ticket_id" type="hidden" value="{{ticketId}}" />
          <label for="testing_note_{{id}}_verdict_works">{{{radioButton "testing_note" id "verdict" "works" verdict}}} Works</label>
          <label for="testing_note_{{id}}_verdict_fails">{{{radioButton "testing_note" id "verdict" "fails" verdict}}} Fails</label>
        </p>
        <p>
          <input id="testing_note_comment" name="comment" size="30" type="text" value="{{comment}}" />
          <input class="btn btn-primary" name="commit" type="submit" value="Save" />
          <input class="btn btn-cancel" name="commit" type="submit" value="Cancel" />
        </p>
      </form>
    </script>
    
    <script id="new_testing_note_template" type="text/x-handlebars-template">
      <li class="testing-note new">
        <form accept-charset="UTF-8" action="/tickets/{{ticketId}}/testing_notes" class="testing-note-form" id="new_testing_note" method="post">
          <p>
            <input data-attr="ticket_id" id="ticket_{{ticketId}}_new_testing_note_ticket_id" name="ticket_id" type="hidden" value="{{ticketId}}" />
            <label for="ticket_{{ticketId}}_new_testing_note_verdict_works"><input id="ticket_{{ticketId}}_new_testing_note_verdict_works" name="verdict" type="radio" value="works"> Works</label>
            <label for="ticket_{{ticketId}}_new_testing_note_verdict_fails"><input id="ticket_{{ticketId}}_new_testing_note_verdict_fails" name="verdict" type="radio" value="fails"> Fails</label>
          </p>
          <p>
            <input id="testing_note_comment" name="comment" size="30" type="text" value="" />
            <input class="btn btn-primary" name="commit" type="submit" value="Post" />
          </p>
        </form>
      </li>
    </script>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/"><%= Rails.configuration.title %></a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
              <li><%= link_to "Projects", projects_path  %></li>
              <li><%= link_to "Kanban", kanban_path  %></li>
            <% if can?(:manage, User) %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            </ul>
            <ul class="nav pull-right">
              <% if current_user %>
                <li><%= link_to "Sign out", destroy_user_session_path %></li>
              <% else %>
                <li><%= link_to "Sign in", new_user_session_path %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span9">
          <%= flash[:alert] %>
          <%= flash[:notice] %>
          <%= flash[:error] %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <!-- <footer>
        <p>&copy; Company 2012</p>
      </footer> -->

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "/assets/application" %>
    <%= ft_init :adapter => :jquery %>
    <script type="text/javascript">
      $(function(){
        window.userId = <%=raw current_user ? current_user.id : "null" %>;
        window.testers = new Testers(<%= raw TesterPresenter.new(User.testers).to_json %>);
      });
    </script>
    <%= yield :scripts %>

  </body>
</html>
